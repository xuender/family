<!DOCTYPE html>
<html lang="zh-CN" ng-app="web" ng-csp>
  <head>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/ng-table.min.css">
    <link rel="stylesheet" href="css/web.css">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="renderer" content="webkit">
    <title>{[{ .Title }]}</title>
  </head>
  <body ng-controller="WebCtrl"
   data-target=".navbar-collapse">
    <header class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">图标</a>
        </div><!-- navbar-header -->
        <nav class="hidden-xs collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
              <a href="/">首页</a>
            </li>
          </ul>
          <ul ng-hide="isLogin" class="nav navbar-nav navbar-right">
            <li>
              <a href ng-click="showLogin()">注册</a>
            </li>
            <li>
              <a href ng-click="showLogin()">登录</a>
            </li>
          </ul>
          <ul ng-show="isLogin" class="nav navbar-nav navbar-right">
            <li ng-show="isLogin && user.cs ">
              <a href="/cs">客服</a>
            </li>
            <li>
              <a href ng-click="post('question')">
                <i class="fa fa-question-circle"></i>
                问题
              </a>
            </li>
            <li>
              <a href ng-click="post('bug')">
                <i class="fa fa-times-circle"></i>
                错误 
              </a>
            </li>
            <li>
              <a href ng-click="post('feature')">
                <i class="fa fa-heart"></i>
                功能建议
              </a>
            </li>
            <li class="dropdown" dropdown>
              <a href="#" class="dropdown-toggle" dropdown-toggle>
                {{ user.name }}
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><a href ng-click="password()">修改密码</a></li>
                <li><a href ng-click="showLog()">操作日志</a></li>
                <li class="divider"></li>
                <li><a href ng-click="showLogin()">更换用户</a></li>
                <li><a href="/logout" >退出</a></li>
              </ul>
            </li>
          </ul>
        </nav><!-- navbar-collapse -->
      </div><!-- container -->
    </header>
    <div class="header-placeholder" id="home"></div>
    <div class="container">
      {[{ yield }]}
    </div><!-- container -->
    <footer>
      <div class="container">
        <p>备案号</p>
      </div><!-- container -->
    </footer>
    <script type="text/javascript">
    var CID = '{[{ .Cid }]}'
    </script>
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/angular.min.js"></script>
    <script src="js/angular-route.min.js"></script>
    <script src="js/angular-locale_zh-cn.js"></script>
    <script src="js/ui-bootstrap-tpls.min.js"></script>
    <script src="js/ng-table.min.js"></script>
    <script src="js/angular-local-storage.min.js"></script>
    <script src="js/hotkey.min.js"></script>
    <script src="js/index.min.js"></script>
{[{ with .Cs }]}
    <script src="js/cs.min.js"></script>
{[{ end }]}
  </body>
</html>

